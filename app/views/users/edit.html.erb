
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel">
      <div class="panel-heading">
        <h2>Change your account info</h2>
      </div>
      <div class="panel-body">
        <%= form_for(@user, multipart: true) do |f| %>

            <%= render 'shared/error_messages', object: f.object %>

            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>

            <%= f.label :user_name %>
            <%= f.text_field :uname, class: 'form-control' %>

            <%= f.label :email %>
            <%= f.email_field :email, class: 'form-control' %>

            <%= f.label :description, 'Introduce yourself' %>
            <%= f.text_area :description, class: 'form-control' %>

            <%= f.label :date_of_birth %><br>
            <%= f.date_select :dob, {:start_year => 1900, :end_year => Date.today.year}, {class: "form-control"} %>
            <br>
            <%= f.label :sex %>
            <%= f.select_tag :sex, options_for_select([ "Male", "Female" ], "Male"), class: 'form-control', name: 'user[sex]' %>

            <%= f.label :country %>
            <%= f.text_field :country, class: 'form-control' %>

            <%= f.label :state %>
            <%= f.text_field :state, class: 'form-control' %>

            <%= f.label :city %>
            <%= f.text_field :city, class: 'form-control' %>

            <%= f.label :mobile %>
            <%= f.text_field :mobile, class: 'form-control' %>

            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>

            <%= f.label :password_confirmation, "Confirmation" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>

            <%= f.label :display_picture %>
            <%= f.file_field :dp, accept: 'image/jpeg,image/gif,image/png' %>

            <%= f.submit "Update my account", class: "btn btn-primary pull-right" %>
        <% end %>
      </div>
      <div class="panel-footer">
        <%= link_to 'Deactivate my account', user_url(current_user), class: 'btn btn-danger btn-block',method: :delete %>
      </div>
    </div>
  </div>
</div>


